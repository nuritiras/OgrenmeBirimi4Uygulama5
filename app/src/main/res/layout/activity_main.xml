<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonOnayla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:onClick="onClickOnayla"
        android:text="Onayla"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextNumber_Not3"
        app:layout_constraintStart_toStartOf="@+id/editTextNumber_Not3"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber_Not3" />

    <EditText
        android:id="@+id/editTextNumber_Not1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:hint="1. Ders notunu giriniz:"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumber_Not2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="2. Ders notunu giriniz:"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/editTextNumber_Not1"
        app:layout_constraintStart_toStartOf="@+id/editTextNumber_Not1"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber_Not1" />

    <EditText
        android:id="@+id/editTextNumber_Not3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="3. Ders notunu giriniz:"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/editTextNumber_Not2"
        app:layout_constraintStart_toStartOf="@+id/editTextNumber_Not2"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber_Not2" />
</androidx.constraintlayout.widget.ConstraintLayout>